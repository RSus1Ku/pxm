<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/ripple"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp"

    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView

                android:id="@+id/ivPerfil"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/asistente"
                />

            <TextView
                android:id="@+id/txtUsuario"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/ivPerfil"
                android:layout_toRightOf="@+id/ivPerfil"
                android:text="usuario"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:textStyle="bold"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/txtComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivPerfil"
                android:layout_alignStart="@+id/txtUsuario"
                android:layout_below="@+id/txtUsuario"
                android:text="Descripcion"
                android:textColor="#000"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"/>




        </RelativeLayout>



    </FrameLayout>
</android.support.v7.widget.CardView>